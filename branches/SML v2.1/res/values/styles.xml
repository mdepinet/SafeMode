<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="CustomMessagesDialogTheme" parent="@android:style/Theme.Dialog">
		<item name="android:windowTitleStyle">@style/CustomMessagesDialogTitle</item>
	</style>
	<style name="CustomMessagesDialogTitle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="Theme.MartiniBackground" parent="android:Theme">
        <item name="android:windowBackground">@null</item>
        <item name="android:background">@drawable/background</item>
    </style>
    <style name="Theme.NoBackground" parent="android:Theme">
        <item name="android:windowBackground">@null</item>
        <item name="android:background">#000000</item>
    </style>
</resources>